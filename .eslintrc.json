{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "ignorePatterns": ["node_modules/"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["react"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "no-template-curly-in-string": "error",
    "semi": "error",
    "camelcase": "error",
    "no-unused-vars": [
      "warn",
      {
        "vars": "local"
      }
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": false
      }
    ],
    "prefer-const": "error",
    "no-undef": "error",
    "no-trailing-spaces": "error",
    "comma-dangle": "error",
    "no-console": "warn",
    "require-await": "error",
    "operator-linebreak": ["error", "before"],
    "eqeqeq": ["error", "always"],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ]
  }
}
